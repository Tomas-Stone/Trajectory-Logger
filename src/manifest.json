{
  "manifest_version": 3,
  "name": "Chrome Task Automation Extension",
  "version": "1.0.0",
  "description": "A Chrome extension that records sequences of actions for task automation using Hugging Face datasets and OpenRouter API.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background/service-worker.ts"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.ts"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup/popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}