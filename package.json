{
  "name": "chrome-task-automation-extension",
  "version": "1.0.0",
  "description": "A Chrome extension for recording sequences of actions for task automation using Hugging Face datasets and OpenRouter API.",
  "main": "src/background/background.ts",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development",
    "watch": "webpack --watch"
  },
  "keywords": [
    "chrome",
    "extension",
    "automation",
    "task",
    "Hugging Face",
    "OpenRouter"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "ts-loader": "^8.0.0"
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background/service-worker.js"],
    "persistent": false
  }
}